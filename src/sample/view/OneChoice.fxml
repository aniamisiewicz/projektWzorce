<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.OneChoice">
   <children>
      <GridPane layoutX="200.0" layoutY="177.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <RadioButton id="answer0" fx:id="answer0" mnemonicParsing="false" text="RadioButton" />
            <RadioButton id="answer1" fx:id="answer1" mnemonicParsing="false" text="RadioButton" GridPane.columnIndex="1" />
            <RadioButton id="answer2" fx:id="answer2" mnemonicParsing="false" text="RadioButton" GridPane.rowIndex="1" />
            <RadioButton id="answer3" fx:id="answer3" mnemonicParsing="false" text="RadioButton" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      <Label id="question" fx:id="question" layoutX="285.0" layoutY="84.0" text="Label" />
      <Button fx:id="answer" layoutX="173.0" layoutY="299.0" mnemonicParsing="false" onAction="#answerQuestion" text="Answer" />
      <Button fx:id="next" layoutX="373.0" layoutY="299.0" mnemonicParsing="false" onAction="#nextQuestion" text="Next" />
      <Label fx:id="alert" layoutX="285.0" layoutY="351.0" />
   </children>
